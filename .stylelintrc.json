{
    "plugins": ["stylelint-order"],
    "extends": ["stylelint-config-standard"],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extend", "mixin", "include", "content"]
            }
        ],
        "string-quotes": "single",
        "order/properties-alphabetical-order": true
    },
    "ignoreFiles": ["**/node_modules/**"]
}
